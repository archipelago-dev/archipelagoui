{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": false
  },
  "include": ["/**/*", "components/**/*", "demo/**/*", "syntax/**/*"],
  "exclude": ["node_modules", "dist", "components", "demo", "syntax"]

}
