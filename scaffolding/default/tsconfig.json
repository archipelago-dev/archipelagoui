{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": "./",
    "paths": {
     "@/": [
        "src/",
       "components/"
      ]
    }
  },
  "include": [
    "src"
  ]
}